---
import "@fontsource-variable/nunito";

import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
	descriptcion: string;
}

const { title, descriptcion } = Astro.props;
---

<!doctype html>
<html class="scroll-smooth" lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={descriptcion} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href='portfolio/favicon.svg' />
		<title>{title}</title>
	</head>
	<body
		class="bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
	>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style is:global>
	:root {
		color-scheme: dark light;
	}
	body {
		font-family: "Nunito Variable", sans-serif;
	}
</style>
