---
import Badge from "./Badge.astro";
import C from "./icons/C.astro";
import AstroJs from "./icons/AstroJs.astro";
import CPlus from "./icons/C++.astro";
import Css from "./icons/Css.astro";
import Django from "./icons/Django.astro";
import Html from "./icons/Html.astro";
import JavaScript from "./icons/JavaScript.astro";
import Node from "./icons/Node.astro";
import Python from "./icons/Python.astro";
import React from "./icons/React.astro";
import Svelte from "./icons/Svelte.astro";
import Tailwind from "./icons/Tailwind.astro";
import TypeScript from "./icons/TypeScript.astro";
import Git from "./icons/Git.astro";
import Linux from "./icons/Linux.astro";
import Express from "./icons/Express.astro";
import VsCode from "./icons/VsCode.astro";
import Sql from "./icons/Sql.astro";
---

<article>
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-3">
        <Badge
            link="https://developer.mozilla.org/es/docs/Web/HTML"
            text="Html"
        >
            <Html />
        </Badge>
        <Badge link="https://developer.mozilla.org/es/docs/Web/CSS" text="Css">
            <Css />
        </Badge>
        <Badge link="https://tailwindcss.com/" text="Tailwind">
            <Tailwind />
        </Badge>
        <Badge
            link="https://developer.mozilla.org/es/docs/Web/JavaScript"
            text="JavaScript"
        >
            <JavaScript />
        </Badge>
        <Badge link="https://www.typescriptlang.org/" text="TypeScript">
            <TypeScript />
        </Badge>
        <Badge link="https://es.reactjs.org/" text="React">
            <React />
        </Badge>
        <Badge link="https://svelte.dev/" text="Svelte">
            <Svelte />
        </Badge>

        <Badge link="https://astro.build/" text="Astro">
            <AstroJs />
        </Badge>
        <Badge link="https://www.python.org/" text="Python">
            <Python />
        </Badge>
        <Badge link="https://www.djangoproject.com/" text="Django">
            <Django />
        </Badge>
        <Badge link="https://nodejs.org/" text="Node">
            <Node />
        </Badge>
        <Badge link="https://expressjs.com/" text="Express Js">
            <Express />
        </Badge>
        <Badge
            link="https://support.microsoft.com/es-es/topic/access-sql-conceptos-b%C3%A1sicos-vocabulario-y-sintaxis-444d0303-cde1-424e-9a74-e8dc3e460671"
            text="SQL"
        >
            <Sql />
        </Badge>
        <Badge link="https://isocpp.org/" text="C">
            <C />
        </Badge>
        <Badge link="https://isocpp.org/" text="C++">
            <CPlus />
        </Badge>
        <Badge link="https://www.linux.org/" text="Linux">
            <Linux />
        </Badge>
        <Badge link="https://git-scm.com/" text="Git">
            <Git />
        </Badge>
        <Badge link="https://code.visualstudio.com/" text="VSCode">
            <VsCode />
        </Badge>
    </div>
</article>
